<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="240dp"
            android:height="240dp"
            android:viewportWidth="240"
            android:viewportHeight="240">
            <group android:name="group">
                <path
                    android:name="path"
                    android:pathData="M 64.031 175.709 L 64.031 65.571 L 137.029 148.815 L 137.029 175.709 L 78.63 109.114 L 78.63 175.709 Z"
                    android:fillColor="#bdbdbd"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_1"
                    android:pathData="M 103.731 65.071 L 163.41 132.422 L 162.386 65.071 L 176.729 65.071 L 176.729 176.209 L 103.731 91.953 Z"
                    android:fillColor="#bdbdbd"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="2"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="2"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="pivotX"
                    android:duration="1000"
                    android:valueFrom="120"
                    android:valueTo="120"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
                <objectAnimator
                    android:propertyName="pivotY"
                    android:duration="1000"
                    android:valueFrom="120"
                    android:valueTo="120"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/overshoot_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="path">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillColor"
                android:startOffset="200"
                android:duration="800"
                android:valueFrom="#bdbdbd"
                android:valueTo="#4caf50"
                android:valueType="colorType"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="path_1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillColor"
                android:startOffset="200"
                android:duration="800"
                android:valueFrom="#bdbdbd"
                android:valueTo="#ffffff"
                android:valueType="colorType"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
