<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:maxWidth="350dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayoutIncoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/imageIncoming"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/money_incoming"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textStyle="bold"
                android:textColor="#4c4c4c"
                android:layout_toEndOf="@id/imageIncoming"
                android:layout_marginStart="155dp"/>

            <TextView
                android:id="@+id/textViewMoneyHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#4c4c4c"
                android:layout_toEndOf="@id/textView"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:paddingVertical="2dp"
                android:text="@string/by"
                android:textColor="#b8b8b8"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/textViewPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:paddingVertical="2dp"
                android:text="Julanito"
                android:textColor="#4c4c4c"
                android:layout_toEndOf="@id/textViewBy"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>